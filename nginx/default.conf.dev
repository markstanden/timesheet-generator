upstream mobile-client {
  server mobile-client:3000;
}

upstream api {
  server api:5000;
}

server {
  listen 80;
  location /socksjs-node {
    proxy_pass http://mobile-client;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "Upgrade";
  }

  location / {
    proxy_pass http://mobile-client;
  }

  location /api {
    rewrite /api/(.*) /$1 break;
    proxy_pass http://api;
  }
}